<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.easyguincheirotsguimaraes.easyguincheiro.RecepcaoDeSinistro">

    <TextView
        android:text="Você tem uma nova solicitação."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recepcao"
        android:enabled="false"
        android:height="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:textColor="#ff2f37"
        android:layout_above="@+id/buttonAceito"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonRecusa"
        android:layout_alignEnd="@+id/buttonRecusa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceitar"
        android:id="@+id/buttonAceito"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃO ACEITAR"
        android:id="@+id/buttonRecusa"
        android:layout_alignBottom="@+id/buttonAceito"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
